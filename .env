# SayEcho Bot Configuration
# -----------------------------------------------------------------------------
# PROXY SETTINGS
SAYECHO_USE_PROXY=false # Set to true to use proxies from data/proxy.txt or global
SAYECHO_GLOBAL_PROXY_URL="" # Fallback global proxy if data/proxy.txt is empty. Example: http://user:pass@ip:port

# DELAY SETTINGS (in seconds)
SAYECHO_DELAY_MIN_ACTIONS=3
SAYECHO_DELAY_MAX_ACTIONS=9
SAYECHO_DELAY_MIN_VISIT=5 
SAYECHO_DELAY_MAX_VISIT=12
SAYECHO_DELAY_MIN_ACCOUNTS=5 # Delay between launching worker batches or sequential accounts
SAYECHO_DELAY_MAX_ACCOUNTS=12
SAYECHO_CYCLE_SLEEP_MINUTES=1440 # Minutes to sleep at the end of a full cycle

# PUPPETEER SETTINGS
SAYECHO_PUPPETEER_HEADLESS=true

# FEATURE FLAGS (true or false)
SAYECHO_PERFORM_ME_CHECK=true
SAYECHO_FETCH_QUESTS=true
SAYECHO_COMPLETE_CHECK_OUT_POSTS=true
SAYECHO_CLAIM_DAILY_WAVES=true
SAYECHO_VISIT_EXTERNAL_LINKS=false # Set true to enable Puppeteer visits for quests

# CONCURRENCY
SAYECHO_MAX_THREADS=3 
SAYECHO_MAX_THREADS_NO_PROXY=1 # Used if SAYECHO_USE_PROXY is false